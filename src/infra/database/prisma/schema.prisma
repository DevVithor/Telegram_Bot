generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String
  validity  DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Products[]
}

model Products {
  id          Int    @id @default(autoincrement())
  groupId     Int
  link        String
  product     String
  descont     String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Group Group @relation(fields: [groupId], references: [id])
}
