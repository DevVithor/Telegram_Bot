{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["DOM"],
    "module": "node16",
    "target": "es2022",
    "outDir": "dist",
    "typeRoots": ["./src/@types"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}